<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidproj.chat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Register" />
        <activity android:name=".Login" />
        <activity
            android:name=".Chat"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".CreateGroupChat"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".AddUserForGroup" />
        <activity android:name=".ListFriends" />
        <activity android:name=".ListMesseger" />
        <activity
            android:name=".InformationFriends"
            android:parentActivityName=".ListFriends">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ListFriends" />
        </activity>
        <activity android:name=".EditUserInfo"></activity>
        <activity android:name=".Main_Chat_Interface"></activity>
    </application>

</manifest>